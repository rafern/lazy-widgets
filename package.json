{
  "name": "lazy-widgets",
  "version": "0.7.1",
  "description": "Typescript retained mode GUI for the HTML canvas API",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "packageManager": "pnpm@8.6.9",
  "scripts": {
    "lint": "eslint src/ --ext .ts",
    "lint-fix": "eslint src/ --ext .ts --fix",
    "build": "tsc",
    "dev": "concurrently --kill-others 'http-server -c-1 .' 'tsc --watch'",
    "docs": "typedoc --options typedoc.json",
    "generate_theme": "node generate_theme.mjs",
    "test": "mocha",
    "clean": "shx rm -rf dist/*",
    "pack": "pnpm run clean && pnpm run lint && pnpm run test && pnpm run docs && pnpm run build && pnpm pack"
  },
  "files": [
    "dist/**/*.d.ts",
    "dist/**/*.js",
    "dist/**/*.js.map"
  ],
  "keywords": [
    "ui",
    "typescript",
    "canvas"
  ],
  "author": "rafern",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rafern/lazy-widgets.git"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "canvas": "^2.11.2",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "tslib": "^2.6.0"
  },
  "optionalDependencies": {
    "http-server": "^14.1.1"
  }
}
