{
  "name": "lazy-widgets",
  "version": "0.4.0",
  "description": "Typescript retained mode GUI for the HTML canvas API",
  "main": "./dist/index.esm.js",
  "exports": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "packageManager": "pnpm@8.1.0",
  "scripts": {
    "lint": "eslint src/ --ext .ts",
    "lint-fix": "eslint src/ --ext .ts --fix",
    "build": "tsc && esbuild --minify --bundle --sourcemap --target=es6 --format=esm --outfile=dist/index.esm.js src/index.ts",
    "dev": "concurrently --kill-others 'http-server -c-1 .' 'esbuild --watch --bundle --sourcemap --target=es6 --format=esm --outfile=dist/index.esm.js src/index.ts'",
    "docs": "typedoc --options typedoc.json",
    "generate_theme": "node generate_theme.mjs",
    "test": "mocha",
    "clean": "shx rm -rf dist/*",
    "pack": "pnpm run clean && pnpm run lint && pnpm run test && pnpm run docs && pnpm run build && pnpm pack"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ui",
    "typescript",
    "canvas"
  ],
  "author": "rafern",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rafern/lazy-widgets.git"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "canvas": "^2.11.2",
    "chai": "^4.3.7",
    "concurrently": "^8.0.1",
    "esbuild": "^0.17.15",
    "eslint": "^8.37.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jsdom": "^21.1.1",
    "mocha": "^10.2.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "tslib": "^2.5.0"
  },
  "optionalDependencies": {
    "http-server": "^14.1.1"
  }
}
